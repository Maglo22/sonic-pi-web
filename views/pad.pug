extends layout

block content
	.section
		.container
			.row
				div(class='twelve columns')
					h1.major= title
					p(id='padID' hidden)= id
			.row
				div(class='twelve columns')
					button#stop='stop'
					button#run='run'
			.row
				div(class='twelve columns')
					#epad

block append scripts
	script(src='/javascripts/pad.js')